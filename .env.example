# OpenAI API Key (for LLM-based classification and proposal generation)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Use Ollama for local LLM
USE_LOCAL_LLM=false
OLLAMA_MODEL=llama2

# Database
DATABASE_PATH=agent/data/leads.db

# Search Settings
MAX_RESULTS_PER_CITY=20
SEARCH_DELAY_SECONDS=2

# Priority Scoring
HIGH_PRIORITY_CITIES=Mumbai,Delhi,Bangalore,Hyderabad,Chennai,Pune
TIER_1_CITIES=Mumbai,Delhi,Bangalore,Hyderabad,Chennai,Pune,Kolkata
TIER_2_CITIES=Ahmedabad,Jaipur,Lucknow,Chandigarh,Gurgaon,Noida
